{
  "$schema": "https://opencode.ai/config.json",
  "model": "zai-coding-plan/glm-4.7",
  "plugin": [
    "oh-my-opencode",
    "./plugin/superpowers.js",
    "./plugin/ghost-pair-programmer.js",
    "@zenobius/opencode-skillful"
  ],
  "provider": {},
  "mcp": {
    "context7": {
      "type": "remote",
      "url": "https://mcp.context7.com/mcp",
      "enabled": true,
      "headers": {
        "CONTEXT7_API_KEY": "{env:CONTEXT7_API_KEY}"
      }
    },
    "sequential-thinking": {
      "type": "local",
      "command": ["npx", "-y", "@modelcontextprotocol/server-sequential-thinking"],
      "enabled": true
    },
    "shannon-thinking": {
      "type": "local",
      "command": ["npx", "-y", "server-shannon-thinking@latest"],
      "enabled": true
    },
    "sequential-thinking-ultra": {
      "type": "local",
      "command": ["node", "/Users/YOUR_USER/.opencode/mcp/Sequential-thinking-ultra-mcp/dist/index.js"],
      "enabled": true,
      "environment": {
        "ULTRA_THINK_AUTO_LABEL": "true",
        "ULTRA_THINK_QUALITY": "true",
        "ULTRA_THINK_META": "true",
        "ULTRA_THINK_BUDGET": "true",
        "ENABLE_QUERY_REWRITING": "true",
        "DEFAULT_BUDGET_MODE": "balanced"
      }
    },
    "mcp-reasoner": {
      "type": "local",
      "command": ["node", "/Users/YOUR_USER/.opencode/mcp/mcp-reasoner/dist/index.js"],
      "enabled": true,
      "environment": {
        "OPENROUTER_API_KEY": "{env:OPENROUTER_API_KEY}"
      }
    },
    "clear-thought": {
      "type": "local",
      "command": ["node", "/Users/YOUR_USER/.opencode/mcp/clear-thought-mcp-server/dist/index.js"],
      "enabled": true
    },
    "exa": {
      "type": "remote",
      "url": "https://mcp.exa.ai/mcp?tools=web_search_exa,get_code_context_exa,crawling_exa,company_research_exa,linkedin_search_exa,deep_researcher_start,deep_researcher_check",
      "enabled": true,
      "headers": {
        "EXA_API_KEY": "{env:EXA_API_KEY}"
      }
    },
    "atom-of-thoughts": {
      "type": "local",
      "command": ["node", "/Users/YOUR_USER/.opencode/mcp/MCP_Atom_of_Thoughts/build/index.js"],
      "enabled": true
    },
    "playwright": {
      "type": "local",
      "command": ["npx", "-y", "@playwright/mcp@latest"],
      "enabled": true
    },
    "prisma-local": {
      "type": "local",
      "command": ["npx", "-y", "prisma", "mcp"],
      "enabled": true
    },
    "prisma-remote": {
      "type": "remote",
      "url": "https://mcp.prisma.io/mcp",
      "enabled": true
    },
    "next-devtools": {
      "type": "local",
      "command": ["npx", "-y", "next-devtools-mcp@latest"],
      "enabled": true
    },
    "linear": {
      "type": "local",
      "command": ["npx", "-y", "mcp-remote", "https://mcp.linear.app/mcp"],
      "enabled": true,
      "timeout": 30000
    }
  }
}
